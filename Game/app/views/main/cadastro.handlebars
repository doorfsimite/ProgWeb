<h1>Criar conta</h1>
<p class="lead">Deseja criar uma conta? Basta preencher o formulário abaixo</p>
<br>
<fieldset>
    <form action="/cadastro" method="post">

        <div class="form-group">
            <label for="nome" class="col-sm col-form-label">Nome Completo</label>
            <div class="col-sm-5">
                <input type="text" class="form-control {{isInvalid errors 'nome'}}" id="nome" name="nome"
                    value="{{reuseValues reusableValues 'nome'}}">
                <div class="invalid-feedback">{{showError errors 'nome'}}</div>
            </div>
        </div>

        <div class="form-group">
            <label for="email" class="col-sm col-form-label">Endereço de E-mail</label>
            <div class="col-sm-5">
                <input type="email" class="form-control {{isInvalid errors 'email'}}" id="email" name="email"
                    value="{{reuseValues reusableValues 'email'}}">
                <div class="invalid-feedback">{{showError errors 'email'}}</div>
            </div>
        </div>

        <div class="form-group col-sm-5">
            <label for="exampleSelect1">Seu curso na UFAM</label>
            <select class="form-control" id="exampleSelect1" name="curso">
                {{#each curso}}
                <option value="{{id}}">{{nome}}</option>
                {{/each}}
            </select>
        </div>

        <div class="form-group">
            <label for="senha" class="col-sm col-form-label">Escolha uma senha de acesso</label>
            <div class="col-sm-5">
                <input type="password" class="form-control {{isInvalid errors 'senha'}}" id="senha" name="senha"
                    value="{{reuseValues reusableValues 'senha'}}">
                <div class="invalid-feedback">{{showError errors 'senha'}}</div>
            </div>
        </div>


        <div class="form-group">
            <label for="confirmacao" class="col-sm-2 col-form-label">Confirme sua senha</label>
            <div class="col-sm-5">
                <input type="password" class="form-control {{isInvalid errors 'senha'}}" id="confirmacao" name="confirmacao"
                    value="{{reuseValues reusableValues 'confirmacao'}}">
                <div class="invalid-feedback">{{showError errors 'senha'}}</div>
            </div>
        </div>

        <div class="form-check">
            <label class="form-check-label">
                <input class="form-check-input" type="checkbox" value="true" name="agree">
                <p>Eu li e concordo com os <a class="text-info">termos de serviço</a></p>
                 <p class="text-danger">{{showError errors 'agree'}}</p>
            </label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</fieldset>