<h1>Adicionar Curso</h1>
<fieldset>
    <form action="/curso/create" method="post">

        <div class="form-group">
            <label for="sigla" class="col-sm-2 col-form-label">Sigla</label>
            <div class="col-sm-10">
                <input type="text" class="form-control {{isInvalid errors 'sigla'}}" id="sigla" name="sigla" value="{{reuseValues curso 'sigla'}}">
                <div class="invalid-feedback">{{showError errors 'sigla'}}</div>
            </div>
        </div>

        <div class="form-group">
            <label for="nome" class="col-sm-2 col-form-label">Nome</label>
            <div class="col-sm-10">
                <input type="text" class="form-control {{isInvalid errors 'nome'}}" id="nome" name="nome"  value="{{reuseValues curso 'nome'}}" >
                <div class="invalid-feedback">{{showError errors 'nome'}}</div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-3 col-form-label" for="textArea">Descrição do curso</label>
            <div class="col-sm-10">

                <textarea class="form-control" id="textArea" rows="3" name="descricao"> {{reuseValues curso 'descricao'}}</textarea>
            </div>
        </div>
        <legend>Área de conhecimento</legend>
        <div class="form-check col-sm-10">
            {{#each areas}}

            <label class="form-check-label">
                <input type="radio" class="form-check-input" name="area" id="optionsRadios1" {{selected curso nome}} value="{{id}}">
                {{nome}}

            </label>
            <br>
            {{/each}}
            <br>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</fieldset>